% Для работы окружения \begin{Verbatim}\end{Verbatim}
\usepackage{fancyvrb}

% Для работы параметров breaklines=true, breakanywhere=true, в Verbatim
\usepackage{fvextra}

\DefineVerbatimEnvironment
{code}{Verbatim}
{
    breaklines=true,
    breakanywhere=true,
    fontsize=\tiny
}

\newcommand{\srcCode}[1]{
    \VerbatimInput[breaklines=true, breakanywhere=true, fontsize=\tiny]{#1}
}
